@page
@model BasketbalAPP.Pages.CRUDinTeam.PlayerToAddModel
@{
}

<div class="text-center">
    <h1>CRUD without Entity Framework</h1>
    <hr />
    <table class="table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        @foreach (var player in Model.DisplayPlayerinTeam)
        {
            <tr>
                <td>@player.FirstName</td>
                <td>@player.LastName</td>
                <td>
                    <form method="post">
                        <input type="submit" value="Add" />
                        <a asp-page="/Team">Back to List</a>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
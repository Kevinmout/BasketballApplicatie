@page "{id:int}"
@model BasketbalAPP.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Page</h1>
<form method="post">
    <table class="table">
        <tr>
            <td>Player Id : @Html.DisplayFor(model => model.DisplayPlayer.IdPlayer)</td>
        </tr>
        <tr>
            <td>First Name : @Html.DisplayFor(model => model.DisplayPlayer.FirstName)</td>
        </tr>
        <tr>
            <td>Last Name : @Html.DisplayFor(model => model.DisplayPlayer.LastName)</td>
        </tr>
        <tr>
            <td>Active Team : <input type="text" asp-for="DisplayPlayer.ActiveTeam" /></td>
        </tr>
    </table>
    <input type="submit" value="Edit" />
    <a asp-page="/Players">Back to List</a>
</form>
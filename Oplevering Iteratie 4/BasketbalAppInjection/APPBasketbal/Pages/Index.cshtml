@page
@model APPBasketbal.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Active Team</th>
            <th>Games</th>
            <th>Points</th>
            <th>Rebounds</th>
            <th>Assists</th>
            <th>Blocks</th>
        </tr>
        @foreach (var item in Model.Players)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.FirstName</th>
                <th>@item.LastName</th>
                <th>@item.ActiveTeam</th>
                <th>@item.Games</th>
                <th>@item.Points</th>
                <th>@item.Rebounds</th>
                <th>@item.Assists</th>
                <th>@item.Blocks</th>
            </tr>
        }
    </table>
</div>
